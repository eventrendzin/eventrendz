{
    "version": 2,
    "routes": [
      {
        "src": "/sitemap.xml",
        "dest": "/sitemap.xml"
      },
      {
        "src": "/robots.txt",
        "dest": "/robots.txt"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          }
        ]
      }
    ],
    "cache": [
      {
        "src": "/sitemap.xml",
        "headers": {
          "Cache-Control": "public, max-age=86400, immutable"
        }
      },
      {
        "src": "/robots.txt",
        "headers": {
          "Cache-Control": "public, max-age=86400, immutable"
        }
      }
    ]
  }
  